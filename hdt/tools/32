  Write.Print(' ➩ NHÓM ZALO: https://zalo.me/g/bprmyn080 \n',Colors.yellow,interval=0.0001)
  Write.Print(' ➩ WEB TOOL : https://linkbio.co/hdttool \n',Colors.green,interval=0.0001)
  Write.Print(' ➩ YOUTUBE: https://youtube.com/@HDT-TOOL \n',Colors.white,interval=0.0001)
