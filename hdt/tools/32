  Write.Print('██╔══██║██║  ██║   ██║        ██║   ██║   ██║██║   ██║██║\n',Colors.cyan_to_green,interval=0.0001)
  Write.Print('██║  ██║██████╔╝   ██║        ██║   ╚██████╔╝╚██████╔╝███████╗\n',Colors.cyan_to_green,interval=0.0001)
  Write.Print('╚═╝  ╚═╝╚═════╝    ╚═╝        ╚═╝    ╚═════╝  ╚═════╝ ╚══════╝\n',Colors.cyan_to_green,interval=0.0001)
